<div class="w-75 d-flex flex-wrap my-5 m-auto">
  <div class="w-100 card m-2 text-bg-dark">
    <div class="card-header">
      <%= @screening.movie.title %>
    </div>
    <div class="card-body">
      <p class="card-text">Email: <%= @reservation.email %></p>
      <p class="card-text">Movie: <%= @screening.movie.title %></p>
      <p class="card-text">Start: <%= @screening.start %></p>
      <p class="card-text">Number of tickets: <%= @reservation.quantity %></p>
      <p class="card-text">Status: <%= @reservation.status %></p>
      <% if policy(@reservation).edit? %>
        <%= link_to 'Edit', edit_screening_reservation_path(@screening, @reservation), class: 'btn btn-outline-warning btn-sm'%>
      <% end %>
      <% if policy(@reservation).confirm? %>
        <%= link_to 'Confirm',
              confirm_screening_reservation_path(@screening, @reservation),
              data: { turbo_method: :patch,
                      turbo_confirm: "Are you sure?" },
              class: 'btn btn-outline-warning btn-sm'%>
      <% end %>
      <% if policy(@reservation).cancel? %>
        <%= link_to 'Cancel',
              cancel_screening_reservation_path(@screening, @reservation),
              data: { turbo_method: :patch,
                      turbo_confirm: "Are you sure?" },
              class: 'btn btn-outline-warning btn-sm'%>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', reservations_path, class: 'btn btn-outline-warning m-2' %>
</div>
