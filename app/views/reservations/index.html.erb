<div class="card text-bg-dark w-75 d-flex flex-wrap my-5 m-auto">
  <div class="card-body">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">Screening</th>
          <th scope="col">Created at</th>
          <th scope="col">Quantity</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.order("created_at desc").each do |reservation| %>
          <tr>
            <td><%= reservation.email %></td>
            <td class="text-wrap"><%= reservation.screening.movie_title_with_start %></td>
            <td class="text-wrap"><%= reservation.created_at %></td>
            <td><%= reservation.quantity %></td>
            <td><%= reservation.status %></td>
            <td>
              <% if policy(reservation).show? %>
                <%= link_to 'Show', screening_reservation_path(reservation.screening, reservation), class: 'btn btn-outline-warning btn-sm' %>
              <% else %>
                <%= link_to 'Edit', edit_screening_reservation_path(reservation.screening, reservation), class: 'btn btn-outline-warning btn-sm' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>
