<div class="card-body">
  <p class="card-text">
  <%= form_with model: @movie do |form| %>
    <% @movie.errors.each do |error| %>
      <p><%= error.full_message %></p>
    <% end %>
    <%= form.text_field :name, placeholder: 'title' %>
    <%= form.text_field :description, placeholder: 'description' %>
    <%= form.text_field :runtime, placeholder: 'runtime' %>
    <%= form.submit class: 'btn btn-sm btn-outline-warning' %>
    <%= link_to "Cancel", :back, class: 'btn btn-sm btn-outline-warning'%>
  <% end %>
</div>
