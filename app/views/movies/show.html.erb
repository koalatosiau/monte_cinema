<div class="w-75 d-flex flex-wrap my-5 m-auto">
  <div class="w-100 card m-2 text-bg-dark">
    <div class="card-header">
      <%= @movie.title %>
    </div>
    <div class="card-body">
      <p class="card-text">Runtime: <%= @movie.runtime %></p>
      <p class="card-text">Summary: <%= @movie.description %></p>
      <p class="card-text">
        <%= render 'links', movie: @movie %>
      </p>
      <p class="card-text">
        <% @movie.screenings.each do |screening| %>
          <%= link_to "#{screening.start.strftime('%d %b, %H:%M')}",
                new_screening_reservation_path(screening),
                class: "btn btn-warning btn-sm #{'disabled' unless policy(screening.reservations.build).new? }" %>
        <% end %>
      </p>
    </div>
  </div>
  <%= link_to 'Back', movies_path, class: 'btn btn-outline-warning m-2' %>
</div>
