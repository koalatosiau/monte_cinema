<%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-outline-warning btn-sm' if policy(movie).edit? %>
<% if policy(movie).destroy? %>
  <%= link_to 'Delete', movie_path(movie), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: 'btn btn-outline-warning btn-sm'%>
<% end %>
